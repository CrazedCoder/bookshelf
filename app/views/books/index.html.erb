<p id="notice"><%= notice %></p>

<h1>Books</h1>

<br/>
<%= form_tag books_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>  
<% end %>
<br/>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Isbn</th>
          <th scope="col">Description</th>
          <th scope="col">Category</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><i><%= book.title %></i></td>
            <td><%= book.author %></td>
            <td><%= book.isbn %></td>
            <td><%= book.description %></td>
            <td><%= book.category %></td>
            <td><%= link_to 'Show', book, class: "btn btn-mini btn-info" %></td>
            <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-success' %></td>
            <td><%= link_to 'Destroy', book, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
</div>
<br>

<%= link_to 'New Book', new_book_path, class: "btn btn-mini btn-info" %>
